<odoo>
    <record id="view_form_library_readonly_book" model="ir.ui.view"> <!-- ir.ui.view will create -->
        <field name="name">library.book.readonly.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Library Book" create="0" edit='0' delete="0"> <!-- edit,delete=0 means cannot able to edit in that view-->
                <sheet>
                    <group> <!-- groups are used to give specific name field and value to get without groups it will show a empty input field -->
                        <field name="name"/>
                        <field name="author_id"/>
                        <field name="category_id"/>
                        <field name="isbn"/>
                        <field name="published_date"/>
                        <field name="description"/>
                    </group>
                </sheet>

                <!-- Chatter settings -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_library_readonly_book" model="ir.ui.view">
        <field name="name">library.book.readonly.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree string="Library Books" create="0" edit='0' delete="0"> <!-- create=0 will restrict the user to create field in the tree list-->
                <field name="name"/>
                <field name="author_id"/>
                <field name="isbn" optional="show"/> <!-- optional is show means we can add or remove the columns -->
                <field name="published_date" optional="hide"/> <!-- If hide is used means it is hidden but can be added if needed -->
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="action_library_readonly_books" model="ir.actions.act_window"> <!-- Specifying the action from the books_views record tag -->
        <field name="name">Books</field> <!--  -->
        <field name="res_model">library.book</field> <!-- -->
        <field name="view_mode">tree,form</field> <!-- -->
        <field name="view_ids" eval="[Command.clear(),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_tree_library_readonly_book')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_form_library_readonly_book')}),    
        ]"/>
    </record>

</odoo>    
